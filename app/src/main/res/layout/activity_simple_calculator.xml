<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="pl.mgorecki.student.mcalculator.SimpleCalculatorActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:weightSum="8"
        android:layout_centerHorizontal="true">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text=""
                android:id="@+id/textView"
                android:layout_weight="1"
                 />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="4">

            <Button
                android:text="CE"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:id="@+id/ceButton"
                android:layout_weight="1"
                android:onClick="ceOnClick" />

            <Button

                android:text="C"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:id="@+id/cbutton"
                android:layout_weight="1"
                android:onClick="cOnClick" />

            <Button

                android:text="Bcksp"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:id="@+id/backspaceButton"
                android:layout_weight="2"
                android:onClick="backspaceOnClick" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="4">
            <Button

                android:text="7"
                android:onClick="digitOnClick"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:id="@+id/button7"
                android:layout_weight="1"
                android:background="@color/accent_material_dark"
                android:elevation="@dimen/abc_action_bar_overflow_padding_end_material" />

            <Button

                android:text="8"
                android:onClick="digitOnClick"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:id="@+id/button8"
                android:layout_weight="1"
                android:background="@color/accent_material_dark"
                android:elevation="@dimen/abc_action_bar_overflow_padding_end_material" />

            <Button

                android:text="9"
                android:onClick="digitOnClick"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:id="@+id/button9"
                android:layout_weight="1"
                android:background="@color/accent_material_dark"
                android:elevation="@dimen/abc_action_bar_overflow_padding_end_material" />
            <Button

                android:text="/"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:id="@+id/buttonDiv"
                android:layout_weight="1"
                android:onClick="operatorOnClick" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <Button

                android:text="4"
                android:onClick="digitOnClick"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:id="@+id/button4"
                android:layout_weight="1"
                android:background="@color/accent_material_dark"
                android:elevation="@dimen/abc_action_bar_overflow_padding_end_material" />

            <Button

                android:text="5"
                android:onClick="digitOnClick"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:id="@+id/button5"
                android:layout_weight="1"
                android:background="@color/accent_material_dark"
                android:elevation="@dimen/abc_action_bar_overflow_padding_end_material" />

            <Button

                android:text="6"
                android:onClick="digitOnClick"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:id="@+id/button6"
                android:layout_weight="1"
                android:background="@color/accent_material_dark"
                android:elevation="@dimen/abc_action_bar_overflow_padding_end_material" />
            <Button

                android:text="*"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:id="@+id/buttonMul"
                android:layout_weight="1"
                android:nestedScrollingEnabled="false"
                android:onClick="operatorOnClick" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <Button

                android:text="1"
                android:onClick="digitOnClick"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:id="@+id/button1"
                android:layout_weight="1"
                android:background="@color/accent_material_dark"
                android:elevation="@dimen/abc_action_bar_overflow_padding_end_material" />
            <Button

                android:text="2"
                android:onClick="digitOnClick"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:id="@+id/button2"
                android:layout_weight="1"
                android:background="@color/accent_material_dark"
                android:elevation="@dimen/abc_action_bar_overflow_padding_end_material" />

            <Button

                android:text="3"
                android:onClick="digitOnClick"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:id="@+id/button3"
                android:layout_weight="1"
                android:background="@color/accent_material_dark"
                android:elevation="@dimen/abc_action_bar_overflow_padding_end_material" />

            <Button

                android:text="+"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:id="@+id/buttonAdd"
                android:layout_weight="1"
                android:onClick="operatorOnClick" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <Button

                android:text="0"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:onClick="digitOnClick"
                android:id="@+id/button0"
                android:layout_weight="3"
                android:background="@color/accent_material_dark"
                android:elevation="@dimen/abc_action_bar_overflow_padding_end_material" />

            <Button

                android:text="^"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:id="@+id/buttonPow"
                android:layout_weight="1"
                android:onClick="operatorOnClick" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">


            <Button

                android:text="."
                android:layout_height="match_parent"
                android:onClick="digitOnClick"
                android:layout_width="0dp"
                android:id="@+id/buttonDot"
                android:layout_weight="1"
                />

            <Button

                android:text="-"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:id="@+id/buttonSub"
                android:layout_weight="1"
                android:onClick="operatorOnClick" />
            <Button

                android:text="="
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:onClick="operatorOnClick"
                android:id="@+id/buttonEq"
                android:layout_weight="2"
                android:background="#93a7e0" />
        </TableRow>


    </TableLayout>
</RelativeLayout>
