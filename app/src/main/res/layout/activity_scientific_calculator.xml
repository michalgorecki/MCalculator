<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="pl.mgorecki.student.mcalculator.ScientificCalculatorActivity">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="7"
        android:layout_centerHorizontal="true">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text=""
                android:id="@+id/textView"
                android:layout_weight="2"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="6">

            <Button

                android:text="C"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:id="@+id/cbutton"
                android:layout_weight="1"
                android:onClick="cOnClick" />

            <Button

                android:text="Bcksp"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:id="@+id/backspaceButton"
                android:layout_weight="1"
                android:onClick="backspaceOnClick" />

            <Button

                android:text="("
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:id="@+id/lbrbutton"
                android:layout_weight="1"
                android:onClick="insertOnClick" />
            <Button

                android:text=")"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:id="@+id/rbrbutton"
                android:layout_weight="1"
                android:onClick="insertOnClick" />
            <Button

                android:text="^"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:id="@+id/powButton"
                android:layout_weight="1"
                android:onClick="insertOnClick" />
            <Button

                android:text="sqrt"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:id="@+id/sqrtButton"
                android:layout_weight="1"
                android:onClick="insertOnClick" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="5">
            <Button

                android:text="7"
                android:onClick="insertOnClick"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:id="@+id/button7"
                android:layout_weight="1"
                android:background="@color/accent_material_dark"
                android:elevation="@dimen/abc_action_bar_overflow_padding_end_material" />

            <Button

                android:text="8"
                android:onClick="insertOnClick"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:id="@+id/button8"
                android:layout_weight="1"
                android:background="@color/accent_material_dark"
                android:elevation="@dimen/abc_action_bar_overflow_padding_end_material" />

            <Button

                android:text="9"
                android:onClick="insertOnClick"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:id="@+id/button9"
                android:layout_weight="1"
                android:background="@color/accent_material_dark"
                android:elevation="@dimen/abc_action_bar_overflow_padding_end_material" />
            <Button

                android:text="/"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:id="@+id/buttonDiv"
                android:layout_weight="1"
                android:onClick="insertOnClick" />
            <Button
                android:text="sin"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:id="@+id/sinButton"
                android:layout_weight="1"
                android:onClick="insertOnClick" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <Button

                android:text="4"
                android:onClick="insertOnClick"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:id="@+id/button4"
                android:layout_weight="1"
                android:background="@color/accent_material_dark"
                android:elevation="@dimen/abc_action_bar_overflow_padding_end_material" />

            <Button

                android:text="5"
                android:onClick="insertOnClick"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:id="@+id/button5"
                android:layout_weight="1"
                android:background="@color/accent_material_dark"
                android:elevation="@dimen/abc_action_bar_overflow_padding_end_material" />

            <Button

                android:text="6"
                android:onClick="insertOnClick"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:id="@+id/button6"
                android:layout_weight="1"
                android:background="@color/accent_material_dark"
                android:elevation="@dimen/abc_action_bar_overflow_padding_end_material" />
            <Button

                android:text="*"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:id="@+id/buttonMul"
                android:layout_weight="1"
                android:nestedScrollingEnabled="false"
                android:onClick="insertOnClick" />
            <Button
                android:text="cos"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:id="@+id/cosButton"
                android:layout_weight="1"
                android:onClick="insertOnClick" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <Button

                android:text="1"
                android:onClick="insertOnClick"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:id="@+id/button1"
                android:layout_weight="1"
                android:background="@color/accent_material_dark"
                android:elevation="@dimen/abc_action_bar_overflow_padding_end_material" />
            <Button

                android:text="2"
                android:onClick="insertOnClick"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:id="@+id/button2"
                android:layout_weight="1"
                android:background="@color/accent_material_dark"
                android:elevation="@dimen/abc_action_bar_overflow_padding_end_material" />

            <Button

                android:text="3"
                android:onClick="insertOnClick"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:id="@+id/button3"
                android:layout_weight="1"
                android:background="@color/accent_material_dark"
                android:elevation="@dimen/abc_action_bar_overflow_padding_end_material" />

            <Button

                android:text="+"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:id="@+id/buttonAdd"
                android:layout_weight="1"
                android:onClick="insertOnClick" />
            <Button
                android:text="log"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:id="@+id/logButton"
                android:layout_weight="1"
                android:onClick="insertOnClick" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <Button

                android:text="0"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:onClick="insertOnClick"
                android:id="@+id/button0"
                android:layout_weight="1"
                android:background="@color/accent_material_dark"
                android:elevation="@dimen/abc_action_bar_overflow_padding_end_material" />

            <Button

                android:text="."
                android:layout_height="match_parent"
                android:onClick="insertOnClick"
                android:layout_width="0dp"
                android:id="@+id/buttonDot"
                android:layout_weight="1"
                />

            <Button

                android:text="-"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:id="@+id/buttonSub"
                android:layout_weight="1"
                android:onClick="insertOnClick" />
            <Button

                android:text="="
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:onClick="equalsOnClick"
                android:id="@+id/buttonEq"
                android:layout_weight="1"
                />
            <Button
                android:text="ln"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:id="@+id/lnButton"
                android:layout_weight="1"
                android:onClick="insertOnClick" />
        </TableRow>


    </TableLayout>

</RelativeLayout>
